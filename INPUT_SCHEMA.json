{
    "title": "Runs monitor",
    "type": "object",
    "schemaVersion": 1,
    "required": ["config"],
    "properties": {
        "config": {
            "title": "Configuration",
            "description": "actorId - ID of actor, isEmptyDatasetFailed - consider empty dataset as failed, maxRunTimeSecs - consider actor runnning longer than this as failed",
            "prefill": { "actorId": "XXX", "isEmptyDatasetFailed": false, "maxRunTimeSecs": 3600 },
            "type": "object",
            "editor": "json",
            "nullable": false,
            "minProperties": 1,
            "maxProperties": 3,
            "patternKey": "/(actorId|isEmptyDatasetFailed|maxRunTimeSecs)/"
        },
        "slackApiKey": {
            "title": "Slack API key",
            "description": "API key to your Slack",
            "type": "string",
            "editor": "textfield",
            "nullable": true
        },
        "slackChannel": {
            "title": "Slace channel name",
            "description": "The name of Slack channel where the message should be posted",
            "type": "string",
            "editor": "textfield",
            "nullable": true
        },
        "emails": {
            "title": "Emails",
            "description": "List of emails to send a message to, this field is optional",
            "type": "array",
            "editor": "stringList",
            "uniqueItems": true
        }
    }
}
